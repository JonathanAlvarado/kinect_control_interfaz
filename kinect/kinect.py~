#!/usr/bin/python
import numpy as np
import cv
import freenect
import depth

cv.NamedWindow('Prueba')
print 'Para detener presiona Esc'

def get_depth():
    return depth.depth_cv(freenect.sync_get_depth()[0])

while 1:
    cv.ShowImage('Prueba', get_depth())
    if cv.WaitKey(10)==27:
        break
